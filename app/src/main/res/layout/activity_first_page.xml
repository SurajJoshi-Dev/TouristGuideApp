<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstPage"
    android:background="@drawable/best"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#63FFFCFC">

    </LinearLayout>

    <TextView
        android:id="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tourism Application"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textColor="@color/black" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:layout_margin="80sp"
        android:scaleType="fitCenter"
        android:src="@drawable/travel"
        android:padding="10dp"

        />

    <Button
        android:id="@+id/Sign"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_BTN"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        app:lottie_rawRes="@raw/secondsplash"
        app:lottie_loop="false"
        app:lottie_autoPlay="true"
        android:visibility="gone"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="made by: Suraj "
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15sp"

        />

</RelativeLayout>